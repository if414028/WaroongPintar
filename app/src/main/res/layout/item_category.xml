<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="android.view.View" />

        <variable
            name="isSelected"
            type="Boolean" />
    </data>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@{isSelected ? @drawable/bg_info_button : @drawable/bg_outline_button, default = @drawable/bg_outline_button}"
        android:paddingStart="@dimen/_8sdp"
        android:paddingTop="@dimen/_4sdp"
        android:paddingEnd="@dimen/_8sdp"
        android:paddingBottom="@dimen/_4sdp">

        <TextView
            android:id="@+id/tv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/proxima_nova"
            android:text="Kategori Produk"
            android:textColor="@{isSelected ? @color/wp_white : @color/wp_info, default = @color/wp_info}"
            android:textStyle="bold" />

    </FrameLayout>

</layout>
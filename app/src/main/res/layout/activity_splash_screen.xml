<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_wp_left_gradient">

        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_margin="@dimen/_4sdp"
            android:alpha="0.25"
            android:src="@drawable/ic_wp_dots"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/wp_onPrimary" />

        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/_4sdp"
            android:alpha="0.2"
            android:src="@drawable/ic_wp_dots"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/appName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/proxima_nova"
                android:text="@string/app_name"
                android:textAlignment="center"
                android:textColor="@color/wp_onPrimary"
                android:textSize="@dimen/_24ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tagline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/proxima_nova"
                android:text="@string/app_tagline"
                android:textAlignment="center"
                android:textColor="@color/wp_onPrimary_70"
                android:textSize="@dimen/_12ssp" />
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/_72sdp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_32sdp"
            android:adjustViewBounds="true"
            android:src="@drawable/company_logo_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
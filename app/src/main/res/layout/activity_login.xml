<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="vm"
            type="com.nesher.waroongpintar.login.LoginViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_wp_left_gradient"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="@dimen/_72sdp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_launcher_foreground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/wp_primary" />

        <!-- App name -->
        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:fontFamily="@font/proxima_nova"
            android:text="@string/app_name"
            android:textColor="@color/wp_white"
            android:textSize="@dimen/_24ssp"
            android:textStyle="bold" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/proxima_nova"
            android:gravity="center"
            android:text="@string/app_tagline"
            android:textColor="@color/wp_white"
            android:textSize="13sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_16sdp"
            app:cardCornerRadius="@dimen/_16sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_24sdp">

                <!-- Company Logo -->
                <ImageView
                    android:id="@+id/ic_company_logo"
                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/company_logo" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_24sdp"
                    android:fontFamily="@font/proxima_nova"
                    android:text="Masuk"
                    android:textColor="@color/wp_textPrimary"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />

                <!-- Username -->
                <EditText
                    android:id="@+id/et_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@drawable/bg_edittext_outline"
                    android:fontFamily="@font/proxima_nova"
                    android:hint="username"
                    android:inputType="text"
                    android:paddingStart="@dimen/_12sdp"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingEnd="@dimen/_12sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:text="@={vm.email}"
                    android:textSize="@dimen/_12ssp" />

                <!-- Password -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp">

                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_edittext_outline"
                        android:fontFamily="@font/proxima_nova"
                        android:hint="password"
                        android:inputType="textPassword"
                        android:paddingStart="@dimen/_12sdp"
                        android:paddingTop="@dimen/_8sdp"
                        android:paddingEnd="@dimen/_12sdp"
                        android:paddingBottom="@dimen/_8sdp"
                        android:text="@={vm.password}"
                        android:textSize="@dimen/_12ssp" />

                    <ImageView
                        android:id="@+id/ic_toggle_password"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_hide" />

                </FrameLayout>

                <!-- Ingat saya + Lupa kata sandi -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/cb_remember"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/proxima_nova"
                        android:text="Ingat Saya"
                        android:textColor="@color/wp_textSecondary"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:id="@+id/tv_forgot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:id="@+id/btn_forgot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/proxima_nova"
                        android:padding="@dimen/_4sdp"
                        android:text="Lupa Kata Sandi?"
                        android:textColor="@color/wp_primary"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Tombol Masuk -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@drawable/bg_button_gradient_circle"
                    android:elevation="@dimen/_4sdp"
                    android:enabled="@{vm.loading ? false : true}"
                    android:fontFamily="@font/proxima_nova"
                    android:onClick="@{() -> vm.onLoginClicked()}"
                    android:padding="@dimen/_4sdp"
                    android:text="Masuk"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold"
                    app:backgroundTint="@null"
                    app:rippleColor="@android:color/white" />

                <ProgressBar
                    android:id="@+id/progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:visibility="@{vm.loading ? View.VISIBLE : View.GONE}" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Info kecil di bawah (opsional: “Mode demo”, versi app, dll) -->
        <TextView
            android:id="@+id/tvBottomInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:gravity="center"
            android:text="Belum punya akun? Hubungi admin untuk aktivasi Waroong Pintar."
            android:textColor="@color/wp_white"
            android:textSize="@dimen/_12ssp" />

    </LinearLayout>
</layout>
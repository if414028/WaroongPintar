<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="WP.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/wp_stroke</item>
        <item name="boxBackgroundColor">@color/wp_surface</item>
        <item name="hintTextColor">@color/wp_textSecondary</item>
        <item name="android:textColor">@color/wp_textPrimary</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="startIconTint">@color/wp_primary</item>
        <item name="endIconTint">@color/wp_primary</item>
    </style>

    <style name="WP.PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/wp_onPrimary</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:background">@drawable/bg_wp_button_primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="WP.OutlineEditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_wp_edittext_outline</item>
        <item name="android:textColor">@color/wp_textPrimary</item>
        <item name="android:textColorHint">@color/wp_textSecondary</item>
        <item name="android:gravity">center_vertical</item>
        <!-- ukuran font opsional -->
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Shape.Round.Full" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="Shape.Round.XL" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item>
    </style>

    <style name="Shape.Rounded.XL">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="RoundedFull">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>
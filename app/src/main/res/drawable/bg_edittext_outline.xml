<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Warna background putih -->
    <solid android:color="@android:color/transparent" />

    <!-- Border biru -->
    <stroke
        android:width="1.5dp"
        android:color="@color/wp_info" /> <!-- pakai warna biru dari palet -->

    <!-- Sudut rounded -->
    <corners android:radius="@dimen/_6sdp" />

    <!-- Padding biar teks tidak mepet -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />
</shape>
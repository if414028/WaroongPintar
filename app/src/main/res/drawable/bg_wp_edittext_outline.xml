<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Disabled -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/wp_white"/>
            <corners android:radius="18dp"/>
            <stroke android:width="1.5dp" android:color="#66B3B7BF"/> <!-- wp_stroke 40% -->
            <padding android:left="16dp" android:top="12dp"
                android:right="16dp" android:bottom="12dp"/>
        </shape>
    </item>

    <!-- Focused / Pressed -->
    <item android:state_focused="true"/>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/wp_white"/>
            <corners android:radius="18dp"/>
            <stroke android:width="2dp" android:color="@color/wp_info"/>
            <padding android:left="16dp" android:top="12dp"
                android:right="16dp" android:bottom="12dp"/>
        </shape>
    </item>

    <!-- Default -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/wp_info"/>
            <corners android:radius="18dp"/>
            <stroke android:width="1.5dp" android:color="@color/wp_stroke"/>
            <padding android:left="16dp" android:top="12dp"
                android:right="16dp" android:bottom="12dp"/>
        </shape>
    </item>
</selector>
<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient biru -->
    <gradient
        android:angle="0"
        android:startColor="@color/wp_buttonStart"
        android:endColor="@color/wp_buttonEnd"
        android:type="linear" />

    <!-- Sudut rounded -->
    <corners android:radius="@dimen/_4sdp" />

    <!-- Shadow kecil via padding + elevation di button -->
    <padding android:left="16dp" android:top="12dp"
        android:right="16dp" android:bottom="12dp"/>
</shape>
<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wp_surface"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Header: greeting + actions -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/headerCard"
            style="@style/Widget.Material3.CardView.Elevated"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Home icon circle -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/icHome"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_launcher_foreground"
                    app:shapeAppearanceOverlay="@style/Shape.Round.Full"
                    app:strokeColor="@color/wp_outline"
                    app:strokeWidth="0dp"
                    app:backgroundTint="@color/wp_chip_bg"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvGreeting"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Hi Nesher, welcome aboard!"
                    android:textColor="@color/wp_on_surface"
                    android:textSize="16sp"
                    android:fontFamily="@font/proxima_nova"
                    app:layout_constraintStart_toEndOf="@id/icHome"
                    app:layout_constraintTop_toTopOf="@id/icHome"
                    app:layout_constraintBottom_toBottomOf="@id/icHome"
                    app:layout_constraintEnd_toStartOf="@id/chipMonth"
                    android:layout_marginStart="12dp" />

                <!-- Month filter chip -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Bulan Ini"
                    app:chipIcon="@drawable/ic_launcher_foreground"
                    app:chipIconTint="@color/wp_primary"
                    app:chipBackgroundColor="@color/wp_chip_bg"
                    app:layout_constraintEnd_toStartOf="@id/btnDownload"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/icHome"
                    android:layout_marginEnd="10dp" />

                <!-- Download report button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDownload"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Download Report"
                    app:icon="@drawable/ic_launcher_foreground"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:layout_constraintEnd_toStartOf="@id/avatar"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/icHome"
                    android:layout_marginEnd="10dp" />

                <!-- Avatar -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/avatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_launcher_foreground"
                    android:padding="8dp"
                    app:shapeAppearanceOverlay="@style/Shape.Round.Full"
                    app:backgroundTint="@color/wp_primary_container"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/icHome" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Metrics row -->
        <LinearLayout
            android:id="@+id/metricRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/headerCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Card 1: Total Pendapatan -->
            <include
                android:id="@+id/cardRevenue"
                layout="@layout/view_metric_card"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1" />

            <!-- Spacer -->
            <Space
                android:layout_width="12dp"
                android:layout_height="0dp" />

            <!-- Card 2: Total Pesanan -->
            <include
                android:id="@+id/cardOrders"
                layout="@layout/view_metric_card"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1" />

            <Space
                android:layout_width="12dp"
                android:layout_height="0dp" />

            <!-- Card 3: Total Produk -->
            <include
                android:id="@+id/cardProducts"
                layout="@layout/view_metric_card"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/wp_divider"
            app:layout_constraintTop_toBottomOf="@id/metricRow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Menu tiles -->
        <LinearLayout
            android:id="@+id/menuRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <include
                android:id="@+id/menuCatalog"
                layout="@layout/view_menu_tile"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1" />

            <Space
                android:layout_width="16dp"
                android:layout_height="0dp" />

            <include
                android:id="@+id/menuCashier"
                layout="@layout/view_menu_tile"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1" />

            <Space
                android:layout_width="16dp"
                android:layout_height="0dp" />

            <include
                android:id="@+id/menuOrders"
                layout="@layout/view_menu_tile"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
